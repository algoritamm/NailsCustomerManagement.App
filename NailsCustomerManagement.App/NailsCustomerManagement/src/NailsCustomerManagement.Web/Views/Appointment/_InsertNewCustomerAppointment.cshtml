@model NailsCustomerManagement.Application.ViewModels.AppointmentVM.InsertNewCustomerVM

<div class="modal fade" id="insertNewCustomerModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@SharedLocalizer["Insert new customer"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="insertAppointmentForm">
                <div class="row">
                    <label asp-for="FirstName" class="col-lg-4 col-form-label">@SharedLocalizer["First name"]<span class="requiredInput">*</span>:</label>
                    <div class="form-group col-lg-8">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="LastName" class="col-lg-4 col-form-label">@SharedLocalizer["Last name"]<span class="requiredInput">*</span>:</label>
                    <div class="form-group col-lg-8">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="Email" class="col-lg-4 col-form-label">@SharedLocalizer["Email address"]<span class="requiredInput">*</span>:</label>
                    <div class="form-group col-lg-8">
                        <input type="email" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="TelephoneNo" class="col-lg-4 col-form-label">@SharedLocalizer["Telephone number"]<span class="requiredInput">*</span>:</label>
                    <div class="form-group col-lg-8">
                        <input asp-for="TelephoneNo" class="form-control" placeholder="+38" autocomplete="off" maxlength="50" />
                        <i class="fas fa-info-circle text-secondary" title="@SharedLocalizer["Enter a phone number starting with +38, digits without spaces."]" aria-hidden="true"></i>
                        <span asp-validation-for="TelephoneNo"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="SelectedServiceTypeId" class="col-lg-4 col-form-label">@SharedLocalizer["Choose service type"].Value<span class="requiredInput">*</span>:</label>
                    <div class="form-group col-lg-8">
                        <select asp-for="SelectedServiceTypeId" class="form-control">
                            <option selected="selected" value="">@SharedLocalizer["--Please select--"]</option>
                            @foreach(var serviceType in Model.ServiceTypes)
                            {
                                <option value="@serviceType.ServiceTypeId">@serviceType.ServiceTypeNameEng</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedServiceTypeId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ItemDate" class="col-lg-4 col-form-label">@SharedLocalizer["Date"]<span class="requiredInput">*</span>:</label>
                    <div class="col-lg-8">
                        <div class="input-group date datepickers" id="itemDatePicker" data-target-input="nearest">
                            <input asp-for="ItemDate" type="text" data-target="#itemDatePicker" class="form-control datetimepicker datetimepicker-input cursorPointer" data-toggle="datetimepicker" />
                            <div class="input-group-append" data-target="#itemDatePicker" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="ItemDate"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ItemTime" class="col-lg-4 col-form-label">@SharedLocalizer["Time"]<span class="requiredInput">*</span>:</label>
                    <div class="col-lg-8">
                        <div class="input-group time timepickers" id="itemTimePicker" data-target-input="nearest">
                            <input asp-for="ItemTime" type="text" class="form-control datetimepicker-input" data-target="#itemTimePicker" />
                            <div class="input-group-append" data-target="#itemTimePicker" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="far fa-clock"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="ItemTime"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="SelectedPaymentTypeId" class="col-lg-4 col-form-label">@SharedLocalizer["Choose payment type"].Value<span class="requiredInput">*</span>:</label>
                    <div class="form-group col-lg-8">
                        <select asp-for="SelectedPaymentTypeId" class="form-control">
                            <option selected="selected" value="">@SharedLocalizer["--Please select--"]</option>
                            @foreach (var payment in Model.Payments)
                            {
                                <option value="@payment.PaymnetTypeId">@payment.PaymnetTypeNameEng</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedPaymentTypeId"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="AppointmentItemName" class="col-lg-12 col-form-label">@SharedLocalizer["Title"]<span class="requiredInput">*</span>:</label>
                    <div class="form-group col-lg-12">
                        <textarea asp-for="AppointmentItemName" class="form-control" rows="3" placeholder="@SharedLocalizer["Title"]"></textarea>
                        <span asp-validation-for="AppointmentItemName"></span>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" title="@SharedLocalizer["Cancel"].Value" value="@SharedLocalizer["Cancel"].Value" />
                <input type="button" id="btnConfirmeInsertAppointment" class="btn btn-primary" title="@SharedLocalizer["Confirm"].Value" value="@SharedLocalizer["Confirm"]" />
            </div>
        </div>
    </div>
</div>



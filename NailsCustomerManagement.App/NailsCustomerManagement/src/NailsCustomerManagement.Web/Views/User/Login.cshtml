@model NailsCustomerManagement.Application.ViewModels.UserVM.LoginVM
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery
    <meta name="csrf-token" content="@antiforgery.GetAndStoreTokens(Context).RequestToken" />

    <title>Nails Salon | Login</title>
    <!--Bootstrap4-->
    <link href="~/lib/bootstrap-4.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!--Font Awesome-->
    <link href="~/lib/fontawesome-free-5.11.2-web/css/all.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/lib/adminLte3/css/adminlte.min.css" rel="stylesheet">
    <!--Shared style-->
    <link href="~/css/shared.css" rel="stylesheet">
</head>

<body class="login-page">
    <div class="login-box">
        <div class="card">
            <div class="card-header text-center p-1"><h4>@SharedLocalizer["Login"]</h4></div>
            <div class="card-body login-card-body">
                <form id="loginForm">
                    @if(Model.LanguageCountries.Count() > 0)
                    {
                        <div class="language-selector">
                            <select asp-for="SelectedLanguageCountryId" class="form-control">
                                @foreach (var lang in Model.LanguageCountries)
                                {
                                     <option value="@lang.Value"  selected="@(lang.Value == "1" ? "selected" : null)">
                                         @lang.Text
                                     </option>
                                }
                            </select>
                            <span asp-validation-for="SelectedLanguageCountryId"></span>
                        </div>
                    }
                    <div class="input-group">
                        <input asp-for="Username" class="form-control" placeholder="@SharedLocalizer["Username"]" autocomplete="off">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Username"></span>
                    <div class="input-group mt-3">
                        <input asp-for="Password" class="form-control" placeholder="@SharedLocalizer["Password"]" autocomplete="off">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password"></span>
                    <div class="alert alert-danger mt-3 hidden" >
                        <span id="LoginResult"></span>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <button id="loginBtn" class="btn btn-primary btn-block">@SharedLocalizer["Login"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- jQuery library 3.5.1 -->
    <script src="~/lib/jquery-3.5.1/dist/jquery.min.js"></script>
    <!--jquery validation-->
    <script src="~/lib/jquery-validation-1.17.0/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive-3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <!--By default validator ignores hidden fields. Change the setting here to ignore nothing-->
    <script>$.validator.setDefaults({ ignore: null });</script>
    <!-- Bootstrap 4.3.1 -->
    <script src="~/lib/bootstrap-4.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/user/login.js"></script>
    <script>
        app.user.login.init({});
    </script>
</body>
</html>